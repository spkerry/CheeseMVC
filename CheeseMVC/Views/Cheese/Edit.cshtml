@using CheeseMVC.Models

<h1>Edit Cheese </h1>
<h2>Name: @ViewBag.cheese.Name ID: @ViewBag.cheese.CheeseId</h2>

<form method="post">

    <div class="form-group">
        <label for="name">Name</label>
        <input class="form-control" name="name" id="name" type="text" value="@ViewBag.cheese.Name"/>
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <input class="form-control" name="description" id="description" type="text" value="@ViewBag.cheese.Description"/>
    </div>

    <input type="hidden" value="@ViewBag.cheese.CheeseId" name="id" />
    <input type="submit" value="Edit Cheese" />


</form>
